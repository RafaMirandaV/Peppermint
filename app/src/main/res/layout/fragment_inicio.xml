<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<RelativeLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="640dp"
    android:background="#f0f0f0">

    <ImageButton
        android:layout_width="325dp"
        android:layout_height="150dp"
        android:layout_marginLeft="45dp"
        android:id="@+id/imageButton"
        android:onClick="onClick"
        android:src="@drawable/evento_header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/ami"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/portugal"
        android:id="@+id/imageButton3"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_alignEnd="@+id/imageButton"
        android:layout_marginRight="40dp" />

    <ImageButton
        android:layout_width="120dp"
        android:src="@drawable/hipo"
        android:layout_height="120dp"
        android:id="@+id/imageButton4"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:adjustViewBounds="true" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/mex"
        android:id="@+id/imageButton5"
        android:layout_alignBottom="@+id/imageButton4"
        android:layout_alignEnd="@+id/imageButton3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Amy"
        android:textColor="@color/text_color"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_marginTop="31dp"
        android:layout_alignEnd="@+id/imageButton2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Winehouse"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_alignEnd="@+id/imageButton2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Portugal"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/textView"
        android:layout_alignStart="@+id/imageButton3"
        android:layout_alignEnd="@+id/imageButton3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Auditorio"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/imageButton3"
        android:layout_alignEnd="@+id/imageButton3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hipos"
        android:id="@+id/textView7"
        android:textColor="@color/text_color"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_alignStart="@+id/imageButton4"
        android:layout_marginTop="23dp"
        android:layout_alignEnd="@+id/imageButton4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Zoo"
        android:textColor="@color/text_color"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/imageButton4"
        android:layout_alignEnd="@+id/imageButton4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Casas chuecas"
        android:id="@+id/textView9"
        android:textColor="@color/text_color"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignStart="@+id/imageButton5"
        android:layout_alignEnd="@+id/imageButton5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="DF"
        android:id="@+id/textView10"
        android:textColor="@color/text_color"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignStart="@+id/imageButton5"
        android:layout_alignEnd="@+id/imageButton5" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/text_color"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rueda de la fortuna"
        android:id="@+id/textView11"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Feria mexicana"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView11"
        android:layout_alignEnd="@+id/textView11"
        android:layout_marginTop="24dp" />


</RelativeLayout>


</ScrollView>